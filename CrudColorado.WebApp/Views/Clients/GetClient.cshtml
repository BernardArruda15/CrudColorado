@model CrudColorado.WebApp.Models.ClientModel

@{
    ViewData["Title"] = "GetClient";
    Layout = "~/Views/Shared/_clientLayout.cshtml";
}

<h2>Obter cliente pelo Id <a asp-action="Index" class="btn btn-sm btn-success">Retornar</a></h2>

<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Obter cliente</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Reserva</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Campos</th><th>Valores</th>
        <tbody>
            <tr>
                <td>ID</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>Nome</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Endereço</td>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <td>Cidade</td>
                <td>@Model.City</td>
            </tr>
            <tr>
                <td>Estado</td>
                <td>@Model.State</td>
            </tr>
            <tr>
                <td>Data Inserção</td>
                <td>@Model.DtInsertion</td>
            </tr>
        </tbody>
    </table>
}
