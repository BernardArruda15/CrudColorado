@model IEnumerable<CrudColorado.WebApp.Models.ClientModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_clientLayout.cshtml";
}

<a asp-action="AddClient" class="btn btn-sm btn-primary">Incluir Cliente</a>
<a asp-action="GetClient" class="btn btn-sm btn-secondary">Obter Cliente</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th> Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Atualiza</th>
            <th>Deleta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => r.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => r.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => r.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => r.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => r.State)
                </td>
                <td>
                    <a asp-action="UpdateClient" asp-route-id="@r.Id"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="DeleteClient" method="post">
                        <input type="hidden" value="@r.Id" name="Id" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>